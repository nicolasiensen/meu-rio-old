%header
  %h2 Sign in
= form_for(resource, :as => resource_name, :url => "/members/sign_in") do |f|
  %div.left.field
    = f.label :email
    %br/
    = f.email_field :email
  %div.right.field
    = f.label :password
    %br/
    = f.password_field :password
  - if devise_mapping.recoverable? && controller_name != 'passwords'
    %div.left
      = link_to "Forgot your password?", new_password_path(resource_name), :class => "small"
  .clearfix
  %div.right= f.submit "Sign in", :class => "btn"
