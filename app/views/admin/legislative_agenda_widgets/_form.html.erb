<%= semantic_form_for [:admin, @legislative_agenda_widget] do |f| %>
  <%= f.inputs do %>
    <div style="margin-left:20%; padding:20px;">
      <p><strong>For each agenda item, please use the following HTML as a basic structure:</strong></p><br/>
      <div>
        &lt;div class='item' data-day='20' data-month='Dez'&gt;<br/>
          &lt;p&gt;Brief sentence about the agenda item&lt;/p&gt;<br/>
        &lt;/div&gt;<br/><br/>

        <p>You can add as many of these events as you would like to cycle through.</p>
      </div>
    </div>

    <%= f.input :html_content, :label => 'HTML Content' %>

    <%= f.buttons %>
  <% end %>
<% end %>
