#new_user
  =link_to "Create a new user", new_admin_user_path
#users_list
  %h2 Current Users
  %table
    - @users.each do |user|
      -unless user == current_user
        %tr.grid_12.alpha
          %td= user.first_name
          %td= user.account_active? ? user.last_name : "#{user.last_name} (deactivated)"
          %td= link_to "Edit", edit_admin_user_path(user), :id => "edit_user_#{user.id}"
          %td= link_to "Delete", admin_user_path(user), :method => :delete, :confirm => "Are you sure?", :id => "delete_user_#{user.id}"
