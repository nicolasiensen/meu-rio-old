-unless @user.avatar.url.blank?
  = image_tag @user.avatar.url(:thumb), :id => "user_avatar"
.first_name
  %p.label First Name
  %p.data= @user.first_name
.last_name
  %p.label Last Name
  %p.data= @user.last_name
.email
  %p.label Email
  %p.data= @user.email
.admin_user
  - if @user.admin == true
    %p.data This user has all administrative privileges
.active
  - unless @user.account_active?
    %p.data This user's account has been deactivated

=link_to "Edit", edit_admin_user_path(@user)
=link_to "Index", admin_users_path
