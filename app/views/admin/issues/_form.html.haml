=semantic_form for [:admin, @issue] do |f|
  =f.inputs "Issue Information" do
    =f.input :name, :as => :string
    =f.input :excerpt
    =f.input :description
    =f.input :image, :as => :file
    =f.input :featured_debate, :as => :select, :collection => @issue.debates
    =f.input :featured_petition, :as => :select, :collection => @issue.petitions
  =f.buttons
  
