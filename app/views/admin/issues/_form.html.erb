<%= semantic_form_for [:admin, @issue] do |f| %>
  <%= f.inputs do %>
    <%= f.input :name, :as => :string %>
    <%= f.input :excerpt %>
    <%= f.input :description %>
    <%= f.input :image, :as => :file %>
    <%= f.input :featured_debate, :as => :select, :collection => @issue.debates %>
    <%= f.input :debate_call_to_action, :as => :string %>
    <%= f.input :featured_personal_story, :as => :select, :collection => @issue.personal_stories %>
    <%= f.input :personal_story_call_to_action, :as => :string %>
    <%= f.input :featured_petition, :as => :select, :collection => @issue.petitions %>
    <%= f.input :petition_call_to_action, :as => :string %>
  <% end %>
  <%= f.buttons %>
<% end %>
