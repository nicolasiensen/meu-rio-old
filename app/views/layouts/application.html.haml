!!!
%html
  %head
    %title MeuRio
    = stylesheet_link_tag "application"
    %link{:href => "/assets/favicon.png", :rel => "shortcut icon"}
    = csrf_meta_tags

    %meta{ :property => "fb:app_id", :content => "#{SITE['fb_app_id']}" }
    %meta{ :property => "og:title",  :content => "#{SITE['og_title']}" }
    %meta{ :property => "og:type",   :content => "#{SITE['og_type']}" }

    -if(content_for :meta_tags).empty?
      %meta{ :property => "og:image",       :content => "#{SITE['og_image']}" }
      %meta{ :property => "og:url",         :content => "#{SITE['og_url']}" }
      %meta{ :property => "og:description", :content => "#{SITE['og_description']}" }
    -else
      =yield(:meta_tags)

    =javascript_include_tag "libs/modernizr-2.0.js"
  %body{:class=> "#{controller.controller_name} #{controller.action_name}", 'data-controller' => controller_name, 'data-action' => action_name }
    %header.container_12
      =link_to 'home', root_path, :id => "logo", :class => "grid_2 sprite logo ir"
      .grid_3.prefix_7
        .member_panel
          - if current_member
            .right.info
              .left
                =image_tag current_member.current_image_url(:thumb), :id => "member_thumbnail", :width => '50', :height => '50', :class => ""
                %p=link_to current_member.first_name, member_path(current_member)
              .right.arrow
            .flyout.left
              %p=link_to t("edit_your_profile"), member_path(current_member)
              - if session[:fb_token]
                %p=link_to t("logout"), facebook_logout_path
              - elsif session[:google_login]
                %p
                  %a#google_logout_link{:href => google_logout_path, :target => 'google_logout_iframe'}= t('logout')
                  %iframe#google_logout_iframe{:name => "google_logout_iframe", :style=> "display: none;"}
              - else
                %p=link_to t("logout"), destroy_member_session_path
          - else
            .join_login_wrap
              =link_to t("join_us"), "#login", :rel => "facebox", :id => "join_us_btn"
              =link_to t("login"), "#login", :rel => "facebox"
          .clearfix
      =render :partial => "shared/main_navigation"
    #main.container_12
      - if flash[:preview]
        %p.preview= flash[:preview]
      - if alert
        %p.alert= alert
      = yield
    %footer.container_12
      %nav.grid_7.alpha
        =link_to "CONTATO", "mailto:info@meurio.org.br"
        |
        =link_to "POLÍTICA DE Privacidade", page_path("privacidade")
        |
        =link_to "TRABALHE COM A GENTE", page_path("trabalhe")
      %p.social.right.grid_4
        TAMBÉM ESTAMOS AQUI, Ó:
        =link_to 'Orkut', "http://www.orkut.com/Main#Community?cmm=114209047", :target => "_blank", :class => "sprite orkut_small ir"
        =link_to 'Twitter', "http://twitter.com/#!/meu_rio", :target => "_blank", :class => "sprite twitter_small ir"
        =link_to 'Facebook', "http://www.facebook.com/pages/Meu-Rio", :target => "_blank", :class => "sprite facebook_small ir"
    %script{:src => "//ajax.googleapis.com/ajax/libs/jquery/1.6.1/jquery.min.js"}
    :javascript
      !window.jQuery && document.write(unescape('%3Cscript src="js/libs/jquery-1.6.1.min.js"%3E%3C/script%3E'))    
    =javascript_include_tag("http://ajax.aspnetcdn.com/ajax/jquery.validate/1.8.1/jquery.validate.min.js")
    =javascript_include_tag("http://ajax.microsoft.com/ajax/jquery.templates/beta1/jquery.tmpl.min.js")
    =javascript_include_tag "libs/underscore-1.1.6.min.js", "libs/facebox", "libs/store", "libs/jquery.tools.min", "application"
    = yield :javascripts
    /[if lt IE 7 ]
      <script src="assets/libs/dd_belatedpng.js"></script>
      <script> DD_belatedPNG.fix('img, .png_bg');</script>
    :javascript
      var _gaq=[['_setAccount','#{SITE['ga_tracking_code']}'],['_trackPageview']];
      (function(d,t){var g=d.createElement(t),s=d.getElementsByTagName(t)[0];g.async=1;
      g.src=('https:'==location.protocol?'//ssl':'//www')+'.google-analytics.com/ga.js';
      s.parentNode.insertBefore(g,s)}(document,'script'));

  = render :partial => "shared/login"
