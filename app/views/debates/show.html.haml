.grid_10.push_1
  .comments
    %h3 Comment prompt
    = image_tag "/assets/comments_arrow.png", :id => "comments_arrow"
    .subtitle
      = link_to t("debate_show.join_the_conversation"), "#new_comment", :id => "join_the_coversation"
      .comments_tooltip= @debate.comments.count
    - @debate.comments.each do |comment|
      .comment.clearfix
        = image_tag comment.member.image_url
        .right_column
          %p= link_to "#{comment.member.first_name} #{comment.member.last_name}", "#"
          %p.content= comment.content
          %p
            = distance_of_time_in_words comment.created_at, Time.now
            |
            = link_to "Flag", "#"

    - if @comment
      = form_for @comment do |form|
        = image_tag current_member.image_url
        = form.text_area :content
        = form.submit "Enviar", :class => "btn"
